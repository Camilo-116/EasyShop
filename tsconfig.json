{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "static/js",
        "rootDir": "static/ts"
    },
    "include": ["./static/ts"],
}